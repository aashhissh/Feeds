<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_16dp"
    android:background="@drawable/card_background"
    android:layout_marginTop="@dimen/margin_4dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/margin_18sp"
        android:textStyle="bold"
        tools:text="Beavers" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_toLeftOf="@+id/iv_feed_image"
        android:layout_toStartOf="@+id/iv_feed_image"
        android:gravity="start"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:text="Beavers are second only to humans in their ability to manipulate and change their environment. They can measure up to 1.3 metres long. A group of beavers is called a colony"
        tools:visibility="visible" />

    <com.ashish.feeds.presentation.ui.custom_views.image_view.CachedImageView
        android:id="@+id/iv_feed_image"
        android:layout_width="@dimen/margin_130dp"
        android:layout_height="@dimen/margin_80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:corner_radius="@dimen/margin_4dp"
        app:effects="cornered"
        app:place_holder="@drawable/placeholder"
        tools:visibility="visible" />

</RelativeLayout>
